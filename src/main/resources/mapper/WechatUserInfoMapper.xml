<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xin.pwdkeeper.wechat.mapper.WechatUserInfoMapper">
    <!-- 添加 resultMap 定义 -->
    <resultMap id="WechatUserInfoResultMap" type="xin.pwdkeeper.wechat.bean.WechatUserInfo">
        <id property="id" column="id"/>
        <result property="userOpenId" column="user_open_id"/>
        <result property="userName" column="user_name"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="followStatus" column="follow_status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 添加公共的查询字段 -->
    <sql id="selectWechatUserInfo">
        id, user_open_id, user_name, phone, email, follow_status, create_time
    </sql>

    <insert id="insert" parameterType="xin.pwdkeeper.wechat.bean.WechatUserInfo">
        INSERT INTO wechat_user_info (user_open_id, user_name, phone, email, follow_status, create_time)
        VALUES (#{userOpenId}, #{userName}, #{phone}, #{email}, #{followStatus}, #{createTime})
    </insert>

    <select id="selectById" resultMap="WechatUserInfoResultMap">
        SELECT <include refid="selectWechatUserInfo"/> FROM wechat_user_info WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="WechatUserInfoResultMap">
        SELECT <include refid="selectWechatUserInfo"/> FROM wechat_user_info
    </select>

    <update id="update" parameterType="xin.pwdkeeper.wechat.bean.WechatUserInfo">
        UPDATE wechat_user_info
        SET user_open_id = #{userOpenId}, user_name = #{userName}, phone = #{phone}, email = #{email}, follow_status = #{followStatus}, create_time = #{createTime}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM wechat_user_info WHERE id = #{id}
    </delete>
</mapper>
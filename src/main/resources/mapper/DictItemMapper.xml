<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xin.pwdkeeper.wechat.mapper.DictItemMapper">
    <!-- 添加 resultMap 定义 -->
    <resultMap id="DictItemResultMap" type="xin.pwdkeeper.wechat.bean.DictItem">
        <id property="itemId" column="item_id"/>
        <result property="typeId" column="type_id"/>
        <result property="grade" column="grade"/>
        <result property="gradeTypeId" column="grade_type_id"/>
        <result property="itemCode" column="item_code"/>
        <result property="itemValue" column="item_value"/>
        <result property="description" column="description"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="flag" column="flag"/>
    </resultMap>

    <!-- 添加公共的查询字段 -->
    <sql id="selectDictItem">
        item_id, type_id, grade, grade_type_id, item_code, item_value, sort_order
    </sql>

    <insert id="insert" parameterType="xin.pwdkeeper.wechat.bean.DictItem">
        INSERT INTO dict_item (type_id, item_code, item_value, description, sort_order)
        VALUES (#{typeId}, #{itemCode}, #{itemValue}, #{description}, #{sortOrder})
    </insert>

    <select id="selectById" resultMap="DictItemResultMap">
        SELECT <include refid="selectDictItem"/> FROM dict_item WHERE item_id = #{itemId} and flag = 1
    </select>

    <select id="selectAll" resultMap="DictItemResultMap">
        SELECT <include refid="selectDictItem"/> FROM dict_item WHERE flag = 1 ORDER BY sort_order ASC
    </select>

    <update id="update" parameterType="xin.pwdkeeper.wechat.bean.DictItem">
        UPDATE dict_item
        SET type_id = #{typeId}, item_code = #{itemCode}, item_value = #{itemValue}, description = #{description}, sort_order = #{sortOrder}
        WHERE item_id = #{itemId}
    </update>

    <delete id="delete">
        DELETE FROM dict_item WHERE item_id = #{itemId}
    </delete>
    <select id="selectAllGroupByTypeId" resultType="java.lang.Integer">
        SELECT
            type_id
        FROM
            dict_item
        WHERE
            flag = 1
        GROUP BY
            type_id
    </select>
    <select id="selectByTypeIds" resultMap="DictItemResultMap" parameterType="java.util.List">
        SELECT <include refid="selectDictItem"/>
        FROM dict_item
        WHERE type_id =#{typeId}
        AND flag = 1
        ORDER BY sort_order ASC
    </select>
</mapper>